.song_list_container {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 100vh;
  padding: 0 30rpx;
  overflow: hidden;
  z-index: 999;
}
.song_list_container .list_mask {
  position: absolute;
  left: 0;
  top: 0;
  width: 100vw;
  height: 100vh;
}
.song_list_container .song_list_wrap {
  position: absolute;
  left: 30rpx;
  bottom: 0;
  width: calc(100% - 60rpx);
  height: 60vh;
  background-color: #fff;
  border-radius: 30rpx;
  padding: 20rpx;
}
.song_list_container .song_list_head {
  width: 100%;
  font-size: 36rpx;
  padding-bottom: 30rpx;
  position: relative;
}
.song_list_container .song_list_head .num {
  font-size: 26rpx;
  color: #919191;
  margin-left: 10rpx;
}
.song_list_container .song_list_content {
  width: 100%;
  height: 100%;
  overflow: hidden;
  padding-bottom: 80rpx;
}
.song_list_container .song_list_content .song_list_item {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
}
.song_list_container .song_list_content .song_list_item .song_name_wrap {
  display: flex;
  align-items: center;
  width: 90%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.song_list_container .song_list_content .song_list_item .song_name_wrap .isCurrent {
  color: var(--themeColor) !important;
}
.song_list_container .song_list_content .song_list_item .song_name_wrap .song_name {
  font-size: 30rpx;
  color: rgba(0, 0, 0, 0.8);
}
.song_list_container .song_list_content .song_list_item .song_name_wrap text {
  font-size: 24rpx;
  color: #919191;
  margin: 0 10rpx;
}
.song_list_container .song_list_content .song_list_item .song_name_wrap .singer {
  font-size: 24rpx;
  color: #919191;
}
.song_list_container .song_list_content .song_list_item .song_icon {
  width: 50rpx;
  height: 50rpx;
  flex-shrink: 0;
}
.song_list_container .song_list_content .song_list_item .song_icon .iconfont {
  color: #919191;
}
