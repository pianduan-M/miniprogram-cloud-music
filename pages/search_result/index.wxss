.search_result {
  width: 100%;
  height: 100vh;
  overflow: hidden;
}
.search_result .search_head {
  position: relative;
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  padding-bottom: 10rpx;
}
.search_result .search_head .search_wrap {
  position: relative;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex: 4;
}
.search_result .search_head .search_wrap input {
  flex: 4;
  padding: 10rpx 70rpx;
  border-radius: 50rpx;
  background-color: #f8f8f8;
}
.search_result .search_head .search_wrap .input_plac {
  color: #c7c7c7;
  font-weight: 400;
  font-size: 26rpx;
}
.search_result .search_head .search_wrap icon {
  position: absolute;
  margin: 0 15rpx;
}
.search_result .search_head .search_wrap .clear_icon {
  right: 0;
}
.search_result .search_head .search_btn {
  width: 80rpx;
  text-align: right;
  flex-shrink: 0;
  float: right;
}
.search_result .nav_container {
  position: relative;
}
.search_result .nav_container .navScroll {
  width: 100vw;
  height: 60rpx;
  margin-top: 20rpx;
  display: flex;
  position: relative;
}
.search_result .nav_container .navScroll .navItem {
  flex-shrink: 0;
  padding: 10rpx 20rpx;
}
.search_result .nav_container .active {
  width: 80rpx;
  height: 10rpx;
  background-color: red;
  position: absolute;
  left: 0;
  top: 38rpx;
  border-radius: 20rpx;
  margin-left: 8rpx;
  z-index: -1;
  transition: 0.4s transform;
}
.search_result .result_content {
  height: calc(100vh - 60rpx);
  position: relative;
  padding: 30rpx 0;
}
.search_result .result_content .result_content_head {
  display: flex;
}
.search_result .result_content .result_content_head .head_left {
  width: 80rpx;
  flex-shrink: 0;
  text-align: center;
}
.search_result .result_content .result_content_head .head_left .iconfont {
  color: var(--themeColor);
}
.search_result .result_content .result_content_head .head_center {
  width: 100%;
  display: flex;
  justify-content: space-between;
}
.search_result .result_content .result_content_head .head_center .num {
  font-size: 24rpx;
  color: #919191;
  margin-left: 10rpx;
}
.search_result .result_content .result_content_head .head_center .icon {
  width: 50rpx;
  flex-shrink: 0;
  text-align: center;
  transform: scale(1.2);
}
.search_result .result_content .result_content_head .head_right {
  width: 80rpx;
  flex-shrink: 0;
  text-align: center;
}
.search_result .result_content .result_content_list {
  padding-top: 20rpx;
}
.search_result .result_content .result_content_list .list_item {
  padding: 10rpx 0rpx 10rpx 30rpx;
  display: flex;
  align-items: center;
}
.search_result .result_content .result_content_list .list_item .num {
  width: 80rpx;
  flex-shrink: 0;
  text-align: center;
  color: #919191;
}
.search_result .result_content .result_content_list .list_item .num .iconfont {
  color: var(--themeColor);
}
.search_result .result_content .result_content_list .list_item .song_info {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  overflow: hidden;
}
.search_result .result_content .result_content_list .list_item .song_info .song_name_wrap {
  width: 100%;
  overflow: hidden;
}
.search_result .result_content .result_content_list .list_item .song_info .song_name_wrap .song_name {
  width: 100%;
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.8);
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.search_result .result_content .result_content_list .list_item .song_info .song_name_wrap .singer {
  display: block;
  width: 100%;
  font-weight: 300;
  font-size: 24rpx;
  color: #919191;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.search_result .result_content .result_content_list .list_item .song_info .icon {
  width: 50rpx;
  flex-shrink: 0;
  text-align: center;
  transform: scale(1.1);
  color: #919191;
}
.search_result .result_content .result_content_list .list_item .item_menu {
  width: 80rpx;
  flex-shrink: 0;
  text-align: center;
}
.search_result .search_suggest {
  position: absolute;
  left: 0;
  top: 90rpx;
  right: 0;
  width: 100vw;
  height: 100vh;
  background-color: #fff;
  color: #3a3a3a;
  z-index: 999;
}
.search_result .search_suggest .search_suggest_wrap {
  padding-top: 10rpx;
}
.search_result .search_suggest .search_suggest_wrap .suggest_item {
  position: relative;
  display: flex;
  align-items: center;
  width: 100%;
  padding: 15rpx;
}
.search_result .search_suggest .search_suggest_wrap .suggest_item::after {
  content: '';
  position: absolute;
  left: 50rpx;
  right: 0;
  bottom: 0;
  height: 1rpx;
  transform: scaleY(0.5);
  background-color: #f1f1f1;
}
.search_result .search_suggest .search_suggest_wrap .suggest_item icon {
  width: 50rpx;
  flex-shrink: 0;
}
.search_result .search_suggest .search_suggest_wrap .suggest_item .item_value {
  position: relative;
  width: 100%;
}
