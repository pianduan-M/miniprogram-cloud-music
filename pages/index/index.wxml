<view class="home">
  <!-- head 搜索框 -->
  <view class="search_wrap">
    <button>
      <icon class="" type="search" size="20" color="#919191"></icon>
      <text>搜索</text>
    </button>
  </view>
  <!-- 轮播图 -->
  <swiper class="banner" indicator-active-color="#fff" indicator-dots circular>
    <swiper-item class="banner_item" wx:for="{{bannerList}}" wx:key="targetId">
      <image src="{{item.imageUrl}}" mode="widthFix">
        <view class="banner_title" style="{{'background:'+item.titleColor}}">{{item.typeTitle}}</view>
      </image>
    </swiper-item>
  </swiper>
  <!-- 首页列表 -->
  <scroll-view class="ball_list" scroll-x enable-flex >
    <view class="ball_list_item"  wx:for="{{ballList}}" wx:key="id" >
      <view class="ball_icon_wrap">
        <view class="ball_icon" style="{{'-webkit-mask-image: url('+ item.iconUrl+')'}}" ></view>
      </view>
      <view class="ball_title">{{item.name}}</view>
    </view >
  </scroll-view>
  <!-- 排行榜 -->
  <view class="hot_top">
      <!-- 标题 -->
    <view class="hot_top_title">
      <view class="hot_title_left">排行榜</view>
      <view class="hot_title_right">
        <text class="more">更多</text>
        <text class="iconfont icon-rightarrow"> </text>
      </view>
    </view>
    <!-- 榜单内容 -->
    <swiper class="hot_top_main" next-margin="50rpx" >
      <!-- 榜单项 -->
      <swiper-item class="hot_top_item" wx:for="{{topList}}" wx:key="id" >
        
        <view class="top_content">
           <view class="top_title">
          <text>{{item.name}}</text> 
          <text class="iconfont icon-rightarrow"></text> 
        </view>
        <view class="top_row" wx:for="{{item.tracks}}" wx:key="id" wx:for-item="item2" wx:for-index="topnum" >
          <view class="song_cover">
            <image  src="{{item2.al.picUrl}}" mode="widthFix" > </image>
          </view>
          <view class="song_info_wrap">
            <view class="song_num">{{topnum}}</view>
            <view class="song_name">{{item2.name}}</view>
            <view class="song_singer">-{{item2.ar[0].name}}</view>
          </view>
          <view class="hot_icon">
            <text>new</text>
          </view>
        </view>
        </view>
      </swiper-item>
    </swiper>
  </view>


  <block wx:for="{{list}}" wx:key="index" >
    <view class="recommend_resource paadding30Rpx">
          <view class="recommed_title">
            <view class="recommed_title_left">{{item.uiElement.subTitle.title}}</view>
            <view class="recommed_title_right" wx:if="{{item.uiElement.button}}" >
              <text class="more">{{item.uiElement.button.text}}</text>
              <text class="iconfont icon-rightarrow"> </text>
            </view>
          </view>
          <scroll-view class="recommend_resource_content" scroll-x enable-flex >
          
            <view class="recomment_item" wx:for="{{item.creatives}}" wx:for-item="item2" wx:key="creativeId" >
              <image src="{{item2.uiElement.image.imageUrl}}" mode="scaleFix" ></image>
              <view class="recomment_name">{{item2.uiElement.mainTitle.title}}</view>
              <view class="recomment_icon" wx:if="{{item2.playCount}}">
                <text class="iconfont icon-play"></text>
                <text>{{item2.playCount }}</text>
              </view>
            </view>
          </scroll-view>
  </view>
  </block>
</view>