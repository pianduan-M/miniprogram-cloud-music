.home {
  height: 100vh;
  background-color: #f6f6f6;
  overflow: hidden;
  padding-bottom: 150rpx;
}
.home .home_content {
  position: relative;
  width: 100%;
  height: calc(100vh - 260rpx);
}
.home .search_wrap {
  width: 100vw;
  padding: 30rpx;
  background-color: #fff;
}
.home .search_wrap button {
  width: 100%;
  background-color: #f8f8f8;
  border-radius: 90rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  font-size: 28rpx;
  font-weight: 300;
  color: #919191;
}
.home .banner {
  background-color: #fff;
  height: 300rpx;
}
.home .banner .banner_item {
  display: flex;
  justify-content: center;
  align-items: center;
}
.home .banner .banner_item image {
  width: 90%;
  border-radius: 30rpx;
  position: relative;
  vertical-align: middle;
}
.home .banner .banner_item image .banner_title {
  position: absolute;
  right: 0;
  bottom: 0;
  color: #fff;
  font-size: 26rpx;
  font-weight: 400;
  padding: 3rpx 20rpx 6rpx 20rpx;
  border-top-left-radius: 20rpx;
}
.home .ball_list {
  padding-top: 10rpx;
  display: flex;
  height: 200rpx;
  position: relative;
  background-color: #fff;
}
.home .ball_list::after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 1px;
  background-color: #dfdfdf;
  transform: scaleY(0.5);
}
.home .ball_list .ball_list_item {
  margin: 20rpx;
  text-align: center;
}
.home .ball_list .ball_list_item .ball_icon_wrap {
  width: 100rpx;
  height: 100rpx;
  background-color: #fdf3f4;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.home .ball_list .ball_list_item .ball_icon_wrap .ball_icon {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background: linear-gradient(90deg, #f64649, #ff6e70);
  -webkit-mask-repeat: no-repeat;
  -webkit-mask-size: cover;
}
.home .ball_list .ball_list_item .ball_title {
  margin-top: 15rpx;
  font-size: 26rpx;
  font-weight: 400;
  white-space: nowrap;
  color: #383838;
}
.home .ball_list .ball_list_item:first-child {
  margin-left: 30rpx;
}
.home .recommend_resource {
  margin-bottom: 20rpx;
  background-color: #fff;
}
.home .recommend_resource .recommed_title {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}
.home .recommend_resource .recommed_title .recommed_title_left {
  font-size: 36rpx;
}
.home .recommend_resource .recommed_title .recommed_title_right {
  color: #616161;
  font-size: 24rpx;
  border: 1px solid #ddd;
  padding: 0 20rpx;
  border-radius: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.home .recommend_resource .recommed_title .recommed_title_right .iconfont {
  font-size: 20rpx;
}
.home .recommend_resource .recommend_resource_content {
  height: 300rpx;
  display: flex;
}
.home .recommend_resource .recommend_resource_content .recomment_item {
  width: 200rpx;
  margin-right: 15rpx;
  color: #000000;
  font-size: 26rpx;
  font-weight: 300;
  position: relative;
}
.home .recommend_resource .recommend_resource_content .recomment_item image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx;
}
.home .recommend_resource .recommend_resource_content .recomment_item .recomment_name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.home .recommend_resource .recommend_resource_content .recomment_item .recomment_icon {
  position: absolute;
  right: 10rpx;
  top: 10rpx;
  color: #fff;
  background-color: rgba(0, 0, 0, 0.2);
  padding: 0 10rpx;
  border-radius: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.home .hot_top {
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 20rpx;
}
.home .hot_top .hot_top_title {
  display: flex;
  justify-content: space-between;
  padding: 30rpx;
}
.home .hot_top .hot_top_title .hot_title_left {
  font-size: 36rpx;
}
.home .hot_top .hot_top_title .hot_title_right {
  color: #616161;
  font-size: 24rpx;
  border: 1px solid #ddd;
  padding: 0 20rpx;
  border-radius: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.home .hot_top .hot_top_title .hot_title_right .iconfont {
  font-size: 20rpx;
}
.home .hot_top .hot_top_main {
  height: 500rpx;
  margin: 0;
}
.home .hot_top .hot_top_main .hot_top_item {
  padding-bottom: 30rpx;
}
.home .hot_top .hot_top_main .hot_top_item .top_content {
  margin: 14rpx;
  padding: 20rpx;
  width: calc(100% -20rpx);
  background-color: #fff;
  box-shadow: 1px 1px 5px rgba(0, 0, 0, 0.1);
  border-radius: 20rpx;
}
.home .hot_top .hot_top_main .hot_top_item .top_content .top_title {
  text-align: center;
}
.home .hot_top .hot_top_main .hot_top_item .top_content .top_row {
  display: flex;
  align-items: center;
  margin: 20rpx 0;
}
.home .hot_top .hot_top_main .hot_top_item .top_content .top_row .song_cover {
  width: 90rpx;
  height: 90rpx;
  flex-shrink: 0;
  flex-grow: 0%;
  border-radius: 20rpx;
  overflow: hidden;
}
.home .hot_top .hot_top_main .hot_top_item .top_content .top_row .song_info_wrap {
  display: flex;
  justify-content: flex-start;
  align-items: flex-end;
  flex: 4;
  flex-shrink: 0;
  overflow: hidden;
}
.home .hot_top .hot_top_main .hot_top_item .top_content .top_row .song_info_wrap .song_num {
  margin: 0 26rpx;
  font-weight: 600;
}
.home .hot_top .hot_top_main .hot_top_item .top_content .top_row .song_info_wrap .song_name {
  font-weight: 400;
  color: #303030;
  font-size: 28rpx;
  width: 70%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.home .hot_top .hot_top_main .hot_top_item .top_content .top_row .song_info_wrap .song_singer {
  width: 20%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-weight: 300;
  font-size: 26rpx;
}
.home .hot_top .hot_top_main .hot_top_item .top_content .top_row .hot_icon {
  flex: 1;
  text-align: right;
  font-size: 26rpx;
  font-weight: 300;
  color: var(--themeColor);
}
