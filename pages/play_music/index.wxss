.play_music {
  height: 100vh;
  position: relative;
  overflow: hidden;
}
.play_music .song_bg {
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
  width: 100vw;
  height: 100vh;
  overflow: hidden;
  background-color: rgba(0, 0, 0, 0.8);
}
.play_music .song_bg image {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100vh;
  filter: blur(80rpx);
}
.play_music .song_bg .mask_opacity {
  animation: mask_opacity 1.5s ease-out 1 both;
}
.play_music .song_bg .mask_opacity1 {
  animation: mask_opacity1 1.5s ease-in 1 both;
}
@keyframes mask_opacity {
  from {
    opacity: 0.1;
  }
  to {
    opacity: 1;
  }
}
@keyframes mask_opacity1 {
  from {
    opacity: 1;
  }
  to {
    opacity: 0;
  }
}
.play_music .song_bg .bg_mask {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.6);
}
.play_music .nav_song_info {
  width: 200rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  margin-left: 110rpx;
}
.play_music .nav_song_info .nav_song_name {
  font-size: 26rpx;
  padding: 5rpx 0;
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.play_music .nav_song_info .nav_singer {
  font-size: 20rpx;
  font-weight: 300;
}
.play_music .play_cover_wrap {
  position: absolute;
  top: 10%;
  bottom: 300rpx;
  left: 0;
  right: 0;
}
.play_music .play_cover_wrap .song-disc {
  position: relative;
  width: 70vw;
  height: 70vw;
  margin: 130rpx auto;
}
.play_music .play_cover_wrap .song-disc .needle {
  position: absolute;
  top: -100rpx;
  left: 46%;
  z-index: 5;
  width: 74px;
  height: 122px;
  transform-origin: 40rpx 0rpx;
  transform: rotate(6deg);
  transition: 1s transform;
}
.play_music .play_cover_wrap .song-disc .needle::after {
  content: "";
  position: absolute;
  left: 0;
  top: 0;
  width: 45rpx;
  height: 45rpx;
  background-color: #fff;
  border-radius: 50%;
  transform: translate(19%, -51%);
}
.play_music .play_cover_wrap .song-disc .song_disc_rotate {
  transform-origin: 40rpx 0rpx;
  transform: rotate(-30deg);
}
.play_music .play_cover_wrap .song-disc .song-turn {
  width: 100%;
  height: 100%;
}
.play_music .play_cover_wrap .song-disc .song-turn:before {
  content: " ";
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  z-index: 2;
  background: url(//s3.music.126.net/mobile-new/img/disc.png) no-repeat;
  background-size: contain;
}
.play_music .play_cover_wrap .song-disc .song-turn .song-rollwrap {
  position: absolute;
  width: 65%;
  height: 65%;
  left: 50%;
  top: 50%;
  z-index: 1;
  transform: translate(-50%, -50%);
}
.play_music .play_cover_wrap .song-disc .song-turn .song-rollwrap .song-img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  overflow: hidden;
  background: url(//s3.music.126.net/mobile-new/img/disc_default.png?ba7c53e…=) no-repeat;
  background-size: contain;
}
.play_music .play_cover_wrap .song-disc .song-turn .song-rollwrap .song-img image {
  width: 100%;
  vertical-align: middle;
}
.play_music .play_cover_wrap .song-disc .cover_rotate {
  animation: cover_rotate 10s linear infinite;
}
@keyframes cover_rotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}
.play_music .play_tools {
  height: 20vh;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  color: #fff;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}
.play_music .play_tools .tools_head {
  width: 100%;
  display: flex;
  justify-content: space-around;
}
.play_music .play_tools .tools_head .iconfont {
  font-size: 40rpx;
}
.play_music .play_tools .tools_head .icon-comment- {
  font-size: 36rpx;
}
.play_music .play_tools .tools_progress_wrap {
  width: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
  flex-wrap: nowrap;
}
.play_music .play_tools .tools_progress_wrap .time {
  flex: 1;
  text-align: center;
  font-size: 20rpx;
  color: #919191;
}
.play_music .play_tools .tools_progress_wrap .progress_container {
  padding: 20rpx 0;
  flex: 4;
  display: flex;
  align-items: center;
}
.play_music .play_tools .tools_progress_wrap .progress_wrap {
  position: relative;
  width: 100%;
  height: 4rpx;
  background-color: rgba(255, 255, 255, 0.3);
}
.play_music .play_tools .tools_progress_wrap .progress_wrap .progress_inner {
  width: 0%;
  height: 100%;
  background-color: #fff;
}
.play_music .play_tools .tools_progress_wrap .progress_wrap .progress_btn {
  position: absolute;
  left: 0;
  top: 50%;
  width: 16rpx;
  height: 16rpx;
  background-color: #fff;
  border-radius: 50%;
  transform: translateY(-50%);
  transition: 0.5s transform;
}
.play_music .play_tools .tools_progress_wrap .progress_wrap .progress_btn.touch_btn {
  transform: translateY(-50%) scale(1.5);
}
.play_music .play_tools .tools_play_btn {
  width: 100%;
  position: relative;
  height: 100rpx;
  padding: 0 30rpx;
}
.play_music .play_tools .tools_play_btn .other_btn_wrap {
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  left: 60rpx;
  right: 60rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.play_music .play_tools .tools_play_btn .other_btn_wrap .play_mode {
  position: relative;
}
.play_music .play_tools .tools_play_btn .other_btn_wrap .play_mode .iconfont {
  font-size: 40rpx;
}
.play_music .play_tools .tools_play_btn .other_btn_wrap .play_mode .icon-one {
  transform: scale(2);
}
.play_music .play_tools .tools_play_btn .play_btn_wrap {
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  left: 30vw;
  right: 30vw;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.play_music .play_tools .tools_play_btn .play_btn_wrap .paly_btn .iconfont {
  font-size: 80rpx;
  color: rgba(255, 255, 255, 0.9);
}
.play_music .play_tools .tools_play_btn .play_btn_wrap .next_btn {
  transform: rotateY(180deg);
}
.play_music .lyrics_container {
  position: absolute;
  top: 20%;
  bottom: 20%;
  left: 0;
  right: 0;
  color: #919191;
  text-align: center;
  overflow: hidden;
}
.play_music .lyrics_container .scrollLyrics {
  width: 100%;
  height: 60vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.play_music .lyrics_container .scrollLyrics .lrc_item {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.play_music .lyrics_container .scrollLyrics .lrc_item .lrc {
  font-size: 30rpx;
  padding: 20rpx 0;
  width: 70%;
}
.play_music .lyrics_container .scrollLyrics .current {
  color: #fff;
}
@media only screen and (min-device-width: 420px) and (max-device-width: 1200px) {
  .play_music {
    /* 在计算机屏幕中宽度在[960px,1200px]区间会应用里面的样式 */
  }
  .play_music .play_cover_wrap .needle {
    position: absolute;
    top: -50rpx !important;
    left: 46%;
    z-index: 5;
    width: 123rpx !important;
    transform-origin: 40rpx 0rpx;
    transform: rotate(-9deg) !important;
    transition: 1s transform;
  }
  .play_music .play_cover_wrap .needle::after {
    transform: translate(0, -63%) !important;
  }
  .play_music .song_disc_rotate {
    transform-origin: 40rpx 0rpx;
    transform: rotate(-30deg) !important;
  }
  .play_music .nav_song_info {
    margin-left: 50rpx !important;
  }
  .play_music .nav_song_info .nav_song_name {
    font-size: 20rpx;
    padding: 7rpx 0;
    width: 100%;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
  }
  .play_music .nav_song_info .nav_singer {
    font-size: 15rpx;
    font-weight: 300;
  }
}
