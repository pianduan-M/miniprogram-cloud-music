.user_container {
  width: 100vw;
  height: 100vh;
  background-color: #f6f6f6;
  margin-bottom: 200rpx;
  overflow: hidden;
  box-sizing: border-box;
}
.user_container .user_wrap {
  width: 100vw;
  height: 100vh;
  padding: 30rpx;
}
.user_container .user_info {
  padding: 20rpx 0;
  display: flex;
  align-items: center;
  overflow: hidden;
}
.user_container .user_info .user_avatar {
  width: 100rpx;
  height: 100rpx;
  border: 2px solid #fff;
  border-radius: 50%;
  margin-right: 20rpx;
  overflow: hidden;
  flex-shrink: 0;
}
.user_container .user_info .user_name {
  flex: 5;
  display: flex;
  align-items: center;
}
.user_container .user_info .user_name.between {
  justify-content: space-between;
}
.user_container .user_info .user_name text {
  font-size: 32rpx;
  font-weight: 400;
  color: #000000;
}
.user_container .like_music {
  padding: 30rpx;
  margin: 20rpx 0;
  border-radius: 20rpx;
  background-color: #fff;
}
.user_container .like_music .like_music_container {
  display: flex;
  align-items: center;
}
.user_container .like_music .like_music_container .like_music_pic {
  width: 90rpx;
  height: 90rpx;
  background-color: #919191;
  border-radius: 15rpx;
  flex-shrink: 0;
  margin-right: 20rpx;
  position: relative;
  overflow: hidden;
  border: 1rpx solid #f8f8f8;
}
.user_container .like_music .like_music_container .like_music_pic .iconfont {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: #fff;
  font-size: 50rpx;
}
.user_container .like_music .like_music_container .like_music_text {
  letter-spacing: 2rpx;
  font-size: 30rpx;
  font-weight: 400;
  color: #272727;
  flex: 3;
}
.user_container .like_music .like_music_container .like_music_text .num {
  font-size: 20rpx;
  color: #919191;
  font-weight: 300;
  display: flex;
  align-items: center;
}
.user_container .like_music .like_music_container .like_music_text .num .iconfont {
  font-size: 20rpx;
  color: skyblue;
  margin-right: 10rpx;
}
.user_container .like_music .like_music_container .like_music_icon {
  font-size: 24rpx;
  font-weight: 300;
  padding: 6rpx 10rpx;
  border: 1px solid rgba(0, 0, 0, 0.2);
  border-radius: 54rpx;
}
.user_container .playlist .playlist_content {
  background-color: #f6f6f6;
}
.user_container .playlist .playlist_content .created_playlist {
  position: relative;
  border-radius: 20rpx;
  background-color: #fff;
  padding: 20rpx;
  margin-top: 20rpx;
}
.user_container .playlist .playlist_content .created_playlist #playlist_created {
  position: relative;
  top: -124rpx;
}
.user_container .playlist .playlist_content .created_playlist #playlist_collect {
  position: relative;
  top: -124rpx;
}
.user_container .playlist .playlist_content .created_playlist .created_playlist_title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #919191;
}
.user_container .playlist .playlist_content .created_playlist .created_playlist_title .name {
  font-size: 24rpx;
  font-weight: 300;
}
.user_container .playlist .playlist_content .created_playlist .created_playlist_title .tools .iconfont.icon-jia {
  margin: 0 20rpx;
}
.user_container .playlist .playlist_content .created_playlist .created_playlist_title .tools .iconfont {
  font-size: 36rpx;
}
.user_container .playlist .playlist_content .created_playlist .created_playlist_content .default {
  text-align: center;
  padding: 20rpx;
  font-size: 26rpx;
  color: #919191;
}
.user_container .playlist .playlist_content .created_playlist .created_playlist_content .playlist_item {
  padding-top: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.user_container .playlist .playlist_content .created_playlist .created_playlist_content .playlist_item .playlist_item_pic {
  position: relative;
  width: 90rpx;
  height: 90rpx;
  border-radius: 15rpx;
  background-color: #f8f8f8;
  overflow: hidden;
  flex-shrink: 0;
  margin-right: 20rpx;
  border: 1rpx solid #f8f8f8;
}
.user_container .playlist .playlist_content .created_playlist .created_playlist_content .playlist_item .playlist_item_pic .iconfont {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}
.user_container .playlist .playlist_content .created_playlist .created_playlist_content .playlist_item .playlist_item_text {
  width: 100%;
  font-size: 30rpx;
  font-weight: 400;
  color: #272727;
}
.user_container .playlist .playlist_content .created_playlist .created_playlist_content .playlist_item .playlist_item_text .num {
  font-size: 26rpx;
  color: #919191;
  font-weight: 300;
}
.user_container .playlist .playlist_content .created_playlist .created_playlist_content .playlist_item .playlist_item_tool {
  color: #919191;
}
.playlist_tab {
  padding-top: 30rpx;
  padding-bottom: 10rpx;
  display: flex;
  justify-content: center;
}
.playlist_tab .tab_item {
  position: relative;
  width: 100%;
  text-align: center;
  font-weight: 600;
  font-size: 36rpx;
}
.playlist_tab .tab_item:first-child::after {
  content: '';
  position: absolute;
  right: 0;
  top: 50%;
  width: 1px;
  height: 50%;
  background-color: #919191;
  transform: translateY(-50%) scaleX(0.5);
}
.playlist_tab .tab_item text {
  position: relative;
  z-index: 1;
}
.playlist_tab .tab_item.active text::before {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: -1;
  width: 100%;
  height: 12rpx;
  background: linear-gradient(to right, #f64649, #ff6063);
  border-radius: 12rpx;
  transform: scaleX(1.1);
}
.fixed {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  background-color: #fff;
  z-index: 999;
}
